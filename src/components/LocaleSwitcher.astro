---
import { getLocale, getSwitcherData } from "i18n:astro";

const locale = getLocale();
const data = getSwitcherData();
---

<select class="border border-gray-300 p-1 rounded-md bg-transparent uppercase" onchange="location = this.value;">
  {
    data.map((e) => (
      <option value={e.href} selected={e.locale === locale}>
        {e.locale}
      </option>
    ))
  }
</select>